<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#b5000000">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:padding="10dp">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="30sp"
                  android:textColor="#FFF"
                  android:text="@string/game_state_lose"
                  android:layout_marginTop="10dp"
                  android:padding="10dp"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <Button
                    android:id="@+id/replay"
                    android:text="@string/game_replay"
                    android:layout_width="148dp"
                    android:layout_height="wrap_content"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="26sp"
                          android:textColor="@color/colorAccent"
                          android:text="Score :"
                          android:paddingRight="5dp"
                          android:paddingLeft="10dp"
                          android:layout_weight=".50"
                          android:textAlignment="viewEnd"
                          android:paddingEnd="5dp" android:gravity="end"/>
                <TextView android:id="@+id/score_user_value"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="26sp"
                          android:textColor="@color/colorAccent"
                          android:text="14"
                          android:textAlignment="textStart"
                          android:layout_weight=".50"
                          android:paddingLeft="10dp" android:gravity="start"/>
            </LinearLayout>
        </LinearLayout>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="30sp"
                  android:textColor="#FFF"
                  android:text="@string/score_indication"
                  android:padding="10dp"
        android:layout_marginTop="10dp"/>
        <EditText
                android:id="@+id/user_text_edit"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:textColor="@color/white"/>
        <TextView
                android:visibility="gone"
                android:id="@+id/user_text"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:textColor="@color/white"/>
        <Button
                android:id="@+id/valid_score"
                android:text="@string/score_btn"
                android:layout_width="148dp"
                android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"/>
        <ListView
                android:id="@+id/score_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>